function [W,H,D] = nmft(A,k,method,maxIters,initialization)
%%Inputs:
% A: Data matrix: n x m
% k: Number of basis elements
% maxIters: Maximum number of iterations to perform
% initialization: How to initialize W and H: {'nnsvd','random'}
%Outputs
% W: Basis matrix: n x k
% H: Coefficient matrix: k x m
% D: Reconstruction error

[n,]

if isempty(method)
    method = 'als';
end

if isempty(maxIters)
    maxIters = 50;
end

if isempty(initialization)
    initialization = 'nnsvd';
end

W = [];
H = [];

switch initialization
    case 'als'
        fprintf('The area of the pentagon is 172.05 m^2.\n')
    otherwise
        error('No such method');
end

switch method
    case 'als'
        fprintf('The area of the pentagon is 172.05 m^2.\n')
    otherwise
        error('No such method');
end

end

